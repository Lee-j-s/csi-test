<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ContentDetailActivity">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@font/bold"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:text="Content"
                android:fontFamily="@font/bold"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <!-- 좋아요 수를 표시할 TextView -->

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-25dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <ImageView
                android:id="@+id/imagelikeButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="-105dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/likeback"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="240dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewContent" />

            <ImageView
                android:id="@+id/imagedeleteButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="-45dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/deleteback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagelikeButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
