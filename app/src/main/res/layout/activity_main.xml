<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn3"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/rightgreen"
            android:fontFamily="@font/bold"
            android:text=" 검색 "
            android:textColor="@color/black"
            android:textSize="0dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn1"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/comback" />



        <ImageView
            android:id="@+id/btn2"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/mapback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/btn5"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/homeback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/btn6"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/searchback1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/btn4"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/setback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>