<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/rblack">

        <ImageView
            android:id="@+id/btn1"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/mapback" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>


        <ImageView
            android:id="@+id/btn2"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/comback"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>


        <ImageView
            android:id="@+id/btn5"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/homeback"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>


        <ImageView
            android:id="@+id/btn3"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/searchback1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>


        <ImageView
            android:id="@+id/btn4"
            style="@android:style/Widget.Holo.Button"
            android:background="@drawable/setback"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>