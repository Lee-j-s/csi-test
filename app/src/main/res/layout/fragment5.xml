<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Title1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="116dp"
            android:fontFamily="@font/bold"
            android:text="행사 상품"
            android:textColor="@color/black"
            android:textSize="26dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/event1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:background="@color/rightgreen"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:text="1+1"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <TextView
            android:id="@+id/event2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@color/rightgreen"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:text="2+1"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <TextView
            android:id="@+id/event3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@color/rightgreen"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:text="2+2"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <TextView
            android:id="@+id/event4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@color/rightgreen"
            android:gravity="center"
            android:fontFamily="@font/bold"
            android:text="할인"
            android:textColor="@color/black"
            android:textSize="26dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/Title"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="116dp"
        android:fontFamily="@font/bold"
        android:text="일반 상품"
        android:textColor="@color/black"
        android:textSize="26dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagebutton1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/pi1"/>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:orientation="horizontal">
        </LinearLayout>
        <ImageView
            android:id="@+id/imagebutton7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pi2"/>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:orientation="horizontal">
        </LinearLayout>
        <ImageView
            android:id="@+id/imagebutton3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pi3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imagebutton4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/pi4"/>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:orientation="horizontal">
        </LinearLayout>
        <ImageView
            android:id="@+id/imagebutton5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pi5"/>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:orientation="horizontal">
        </LinearLayout>
        <ImageView
            android:id="@+id/imagebutton6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/pi6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
     </LinearLayout>

    <ImageView
        android:id="@+id/imagebutton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/pi7"/>

</LinearLayout>
